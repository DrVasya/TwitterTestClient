<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
    </style>

    <style name="AppTheme.CustomProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_custom</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>
</resources>
